{
  "variables": {
    "update_suffix": "u11",
    "distro": "full",
    "ISOUrl": "file:///Users/tnarik/Desktop/sol-10-u9-ga-x86-dvd.iso",
   "ISOChecksum" : "c96bb1fb33081231c72c93add331e338",
    "output_base": "."
    },
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/postinstall.sh",
        "scripts/vagrant.sh",
        "scripts/vmtools.sh",
        "scripts/cleanup.sh"
      ],
      "override": {
        "virtualbox": {
          "execute_command": "{{ .Vars }} pfexec bash -l '{{ .Path }}'"
        },
        "vmware": {
          "execute_command": "{{ .Vars }} pfexec bash -l '{{ .Path }}'"
        },
        "parallels": {
          "execute_command": "{{ .Vars }} pfexec bash -l '{{ .Path }}'"
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "{{ user `output_base` }}/vagrant/solaris10-{{ user `update_suffix` }}-{{ user `distro` }}-{{ .BuildName }}.box",
      "keep_input_artifact": true
    }
  ],
  "builders": [
    {
      "name": "virtualbox",
      "type": "virtualbox-iso",
      "boot_command": [
        "e<wait>",
        "e<wait>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><wait>",
        "- nowin install -B install_media=cdrom<enter><wait>",
        "b<wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 65140,
      "floppy_files": [
        "floppy/{{ user `update_suffix` }}/sysidcfg",
        "floppy/rules",
        "floppy/rules.ok",
        "floppy/begin",
        "floppy/{{ user `distro` }}/profile",
        "floppy/finish"
      ],
      "headless": true,
      "guest_os_type": "Solaris_64",
      "iso_checksum": "{{ user `ISOChecksum` }}",
      "iso_checksum_type": "md5",
      "iso_url": "{{ user `ISOUrl` }}",
      "output_directory": "{{ user `output_base` }}/output-virtualbox",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "pfexec /usr/sbin/poweroff",
      "guest_additions_path": "VBoxGuestAdditions.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [ "modifyvm", "{{ .Name }}", "--memory", "768" ],
        [ "modifyvm", "{{ .Name }}", "--cpus", "1" ],
        [ "modifyvm", "{{ .Name }}", "--hwvirtex", "on" ]
      ]
    },
    {
      "name": "vmware",
      "type": "vmware-iso",
      "boot_command": [
        "e<wait>",
        "e<wait>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><wait>",
        "- nowin install -B install_media=cdrom<enter><wait>",
        "b<wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 65140,
      "floppy_files": [
        "floppy/{{ user `update_suffix` }}/sysidcfg",
        "floppy/rules",
        "floppy/rules.ok",
        "floppy/begin",
        "floppy/{{ user `distro` }}/profile",
        "floppy/finish"
      ],
      "headless": false,
      "guest_os_type": "solaris10-64",
      "iso_checksum": "{{ user `ISOChecksum` }}",
      "iso_checksum_type": "md5",
      "iso_url": "{{ user `ISOUrl` }}",
      "output_directory": "{{ user `output_base` }}/output-vmware",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "pfexec /usr/sbin/poweroff",
      "tools_upload_flavor": "solaris",
      "tools_upload_path": "VMWareTools.iso",
      "vmx_data": {
        "memsize": "768",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      }
    },
    {
      "name": "parallels",
      "type": "parallels-iso",
      "boot_command": [
        "e<wait>",
        "e<wait>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><wait>",
        "- nowin install -B install_media=cdrom<enter><wait>",
        "b<wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 65140,
      "floppy_files": [
        "floppy/{{ user `update_suffix` }}/sysidcfg",
        "floppy/rules",
        "floppy/rules.ok",
        "floppy/begin",
        "floppy/{{ user `distro` }}/profile",
        "floppy/finish"
      ],
      "guest_os_type": "solaris-10",
      "iso_checksum": "{{ user `ISOChecksum` }}",
      "iso_checksum_type": "md5",
      "iso_url": "{{ user `ISOUrl` }}",
      "output_directory": "{{ user `output_base` }}/output-parallels",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "pfexec /usr/sbin/poweroff",
      "parallels_tools_mode": "disable",
      "hard_drive_interface": "ide",
      "prlctl": [
        ["set", "{{ .Name }}", "--memsize", "768"],
        ["set", "{{ .Name }}", "--cpus", "1"]
      ]
    }
  ]
}